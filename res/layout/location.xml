<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:clipChildren="true" android:clipToPadding="true"
	android:padding="0dp" android:measureAllChildren="true">
	<com.google.android.maps.MapView
		xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/mapView"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:clickable="true" android:apiKey="09YSa1ijH6EKAoGgp_8aTzL8Xsfd_g-AGbSpYDA">
	</com.google.android.maps.MapView>
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:orientation="horizontal">
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:orientation="vertical">

			<Button android:id="@+id/findMeAction" android:width="140dp"
				android:height="25dp" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Yelp"
				android:gravity="bottom">
			</Button>
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<Button android:id="@+id/PreviousYelpFind" android:width="60dp"
					android:height="25dp" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Prev"
					android:gravity="bottom" android:layout_marginRight="5dp">
				</Button>
				<Button android:id="@+id/NextYelpFind" android:width="60dp"
					android:height="25dp" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Next"
					android:gravity="bottom" android:layout_marginLeft="5dp">
				</Button>
			</LinearLayout>
		</LinearLayout>
		<Button android:id="@+id/recommedAction" android:width="140dp"
			android:height="25dp" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Recommend"
			android:gravity="bottom">
		</Button>
	</LinearLayout>


</RelativeLayout>

