<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/location_detail_layout" android:orientation="vertical"
	android:layout_width="wrap_content" android:layout_height="wrap_content"

	android:background="@drawable/info_win_background_orange">

	<TextView android:id="@+id/name" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textColor="#ff8c00"
		android:paddingTop="12dip" />
	
	<TextView android:id="@+id/taglist_text"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Rating"/>
        
	<RatingBar android:layout_width="wrap_content" android:id="@+id/ratingbar" 
	 android:layout_height="wrap_content" android:numStars="5"
	 android:rating="1" android:clickable="true"
	
	/>
	<TextView android:id="@+id/address" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textColor="#ff8c00"
		android:paddingTop="5dip" />

	<TextView android:id="@+id/rating" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textColor="#ff8c00"
		android:paddingTop="5dip" />

	<TextView android:id="@+id/snippet" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textColor="#ff8c00"
		android:paddingTop="5dip" />

	<TextView android:id="@+id/categories" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textColor="#ff8c00"
		android:paddingTop="5dip" android:paddingBottom="5dip" />
		
	<LinearLayout 
	    android:orientation="horizontal"
	    android:padding="10dip"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center">
	    
	    <Button android:id="@+id/OKButton"
	    	android:text="OK"
	    	android:enabled="true"
	    	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	    	/>
    	<Button android:id="@+id/CancelButton"
	    	android:text="Cancel"
	    	android:enabled="true"
	    	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	    	/>
    	</LinearLayout>
</LinearLayout>